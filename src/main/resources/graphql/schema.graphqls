type Mutation{
    writePosting(topicId: ID!, postingRequest: PostingRequest!): PostingResponse
    signupMember(signupRequest: SignupRequest!): SuccessResponse
    signIn(signInRequest: SignInRequest): TokenResponse
    updatePosting(id:ID!, postingRequest: PostingRequest!): PostingResponse
}

type Query{
    getPostings: PostingListResponse
    getPosting(id:ID!): PostingResponse
    getMember(id: ID!): MemberResponse
    getSelfInfo: MemberResponse
}

type Subscription{
    getPostingsRealTime: PostingListResponse
    getPostingRealTime(id: ID!): PostingResponse
}